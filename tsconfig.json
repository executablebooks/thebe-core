{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noImplicitAny": true,
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "dist/cjs",
    "baseUrl": ".",
    "paths": {
      "*/": ["node_modules/*"],
      "~/": ["./src/*"]
    },
    "declaration": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["src"]
}
